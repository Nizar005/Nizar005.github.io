/*Global*/

*{
	margin:0;
	padding:0;
}

body{
	margin-bottom:100px;
}

body{
	background-color:black;
	background-image:url('../Images/Bcakground.png');
	background-size:2000px;
	background-repeat:no-repeat;
	background-position: center center;
	color:#ffffff;
	font-family: sans-serif;
}

a {
	color:#7a97ff;
}

a:hover{
	color:#0038ff;
}'

a:active{
	color:#001561;
}


.pages{
	margin:0px;
	padding:0px;
	background-color:#00031c;
}

.pages ul {
	list-style-type: none;
	margin: 0;
	padding: 0;
	overflow: hidden;
}

.pages li {
	float:left;
	border-right: 1px solid #bbb;
}


.pages li a {
	display: block;
	color: white;
	text-align: center;
	padding: 14px 16px;
	text-decoration: none;
}

.pages li a:hover {
	background-color: #0011a8;
}

.active {
	background-color: #0018f2;
}


.heading{
	display:flex;
	width:100%;
	height:400px;
	background-image:url('../Images/camping.png');
	background-size:1500px;
	background-repeat:no-repeat;
	background-position: center center;
	justify-content:center;
	align-items:center;
}

.heading h1{
	display:flex;
	text-align:center;
	font-size:70px;	
}

.footer{
	text-align:Center;
	color:white;
	font-size:20px;
	margin:50px;
}


